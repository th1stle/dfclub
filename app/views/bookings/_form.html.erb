
<%= simple_form_for(booking) do |f| %>

<%= f.input :booking_for %>

<%= f.input :firstname %>

<%= f.input :lastname %>

<%= f.input :phone %>

<%= f.input :booking_for, as: :datetime, start_year: Date.today.year, ampm: true, order: [:day, :month, :year] %>

<%= f.input :clubname %>

<%= f.input :location %>

<%= f.button :submit, class: "btn btn-primary" %>

<% end %>